<Window x:Class="LCPClient.LCP_Client"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LCPClient"
        mc:Ignorable="d"
        Title="LCP_Client" Height="450" Width="500" Closed="Window_Closed">
    <Grid Margin="10,10,10,10">
        <Button Name="start_button" Margin="20" Content="Start" 
                HorizontalAlignment="Right" VerticalAlignment="Bottom" Height="30" Width="100" Click="start_button_click"/>
        <Label Name ="ip_label"></Label>
        <TextBox Name="ip_textbox"></TextBox>
        <Label Name ="port_label"></Label>
        <TextBox Name="port_textbox"></TextBox>
        <Label Name="transaction_period_label"></Label>
        <TextBox Name="transaction_period_textbox"></TextBox>
        <Label Name="transaction_time_label"></Label>
        <TextBox Name="transaction_time_textbox"></TextBox>
        <TextBox Name="transaction_queue_textbox" TextChanged="transaction_queue_textbox_TextChanged"></TextBox>
    </Grid>
</Window>
